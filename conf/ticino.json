{
  "inputShpFile": "../data/maps/limiti_cantone_2012_shp_MN95/limiti_cantone_2012_MN95.shp",
  "label": "TICINO",
  "mapper":{
    "background": {
      "epsg": 21781,
      "file":"../data/maps/sottoceneri.tif"
    }
  },
  "polygons": {
    "csvFile": "../data/polygons/ticino.csv",
    "jsonFile": "../data/polygons/ticino.json"
  },
  "zonesSplitter": {
    "folder": "../data/zones_splitting",
    "maxVertexes": 250
  },
  "downloader": {
    "geoAdmin": {
      "url": "https://api3.geo.admin.ch/rest/services/api/MapServer",
      "suffix": "geometryType=esriGeometryPolygon&imageDisplay=500,600,96&mapExtent=548945.5,147956,549402,148103.5&tolerance=5&layers=all",
      "dataSource": [
        "ch.bfe.kleinwasserkraftpotentiale",
        "ch.bfe.solarenergie-eignung-fassaden",
        "ch.bfe.solarenergie-eignung-daecher",
        "ch.bfe.biomasse-nicht-verholzt",
        "ch.bfe.biomasse-verholzt",
        "ch.bfe.fernwaerme-nachfrage_wohn_dienstleistungsgebaeude",
        "ch.bfe.fernwaerme-nachfrage_industrie"
      ]
    },
    "zonesRegExp": "*",
    "outputFolder": "../data/geoadmin_data"
  },
  "handler": {
    "outputfolder": "../data/geoadmin_handled_data",
    "dataSourcesData": [
      {
        "name": "ch.bfe.kleinwasserkraftpotentiale",
        "filter": null,
        "attributesToReport":  ["gwlnr", "label", "kwprometer", "laenge"],
        "attributesToSumPerZone":  ["kwprometer", "laenge"],
        "attributesToSumPerZoneGroupedBy": null
      },
      {
        "name": "ch.bfe.solarenergie-eignung-fassaden",
        "filter": null,
        "attributesToReport":  ["label", "klasse", "gwr_egid", "flaeche_kollektoren", "ausrichtung"],
        "attributesToSumPerZone":  ["flaeche_kollektoren"],
        "attributesToSumPerZoneGroupedBy":  [
          {
            "groupingAttribute": "klasse",
            "cases": [0, 1, 2, 3, 4, 5],
            "groupedAttributes": ["flaeche_kollektoren"]
          }
        ]
      },
      {
        "name": "ch.bfe.solarenergie-eignung-daecher",
        "filter": null,
        "attributesToReport":  ["label", "klasse", "neigung", "flaeche_kollektoren", "ausrichtung"],
        "attributesToSumPerZone":  ["flaeche_kollektoren"],
        "attributesToSumPerZoneGroupedBy":  [
          {
            "groupingAttribute": "klasse",
            "cases": [0, 1, 2, 3, 4, 5],
            "groupedAttributes": ["flaeche_kollektoren"]
          }
        ]
      },
      {
        "name": "ch.bfe.biomasse-nicht-verholzt",
        "filter": null,
        "attributesToReport":  ["label", "bfs_nummer", "name", "woody", "non_woody"],
        "attributesToSumPerZone":  ["woody", "non_woody"],
        "attributesToSumPerZoneGroupedBy": null
      },
      {
        "name": "ch.bfe.biomasse-verholzt",
        "filter": null,
        "attributesToReport":  ["label", "bfs_nummer", "name", "woody"],
        "attributesToSumPerZone":  ["woody"],
        "attributesToSumPerZoneGroupedBy": null
      },
      {
        "name": "ch.bfe.fernwaerme-nachfrage_industrie",
        "filter": null,
        "attributesToReport":  ["label", "needindustry"],
        "attributesToSumPerZone":  ["needindustry"],
        "attributesToSumPerZoneGroupedBy": null
      },
      {
        "name": "ch.bfe.fernwaerme-nachfrage_wohn_dienstleistungsgebaeude",
        "filter": null,
        "attributesToReport":  ["label", "percentgas", "percentpump", "percentremoteheat", "percentoil", "needservice", "needhome", "needtotal"],
        "attributesToSumPerZone":  ["needservice", "needhome", "needtotal"],
        "attributesToSumPerZoneGroupedBy": null
      }
    ]
  }
}
